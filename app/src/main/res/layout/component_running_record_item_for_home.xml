<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/journey_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/list_item_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_textview2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="70dp"
                android:text="12/07/2021"
                android:textColor="@color/black"
                android:textSize="@dimen/content"
                android:fontFamily="@font/manrope"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/journeyname_txtview2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Running 1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/content"
                android:fontFamily="@font/manrope"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/distance_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/stoke_distance"
                android:gravity="center"
                android:text="10 Km"
                android:textColor="@color/white"
                android:textSize="@dimen/content"
                android:fontFamily="@font/manrope"/>

            <TextView
                android:id="@+id/time_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:background="@drawable/stoke_time"
                android:gravity="center"
                android:text="15m2s"
                android:textColor="@color/black"
                android:textSize="@dimen/content"
                android:fontFamily="@font/manrope"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>